---
import { AstroFont } from "astro-font";
import { ViewTransitions } from "astro:transitions";
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
import "swiper/css/scrollbar";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <AstroFont
      config={[
        {
          src: [],
          preload: false,
          display: "swap",
          fallback: "serif",
          name: "Crimson Pro",
          cssVariable: "crimson-pro",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400",
        },
        {
          src: [],
          preload: false,
          display: "swap",
          name: "Open Sans",
          fallback: "sans-serif",
          cssVariable: "open-sans",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700",
        },
      ]}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="font-sans text-dark bg-light scroll-smooth">
    <slot />
    <style is:global>
      a {
        cursor: pointer;
      }

      section {
        @apply max-w-7xl m-auto;
      }

      .swiper-slide,
      .swiper-slide img {
        @apply rounded-2xl mx-auto;
      }

      .landing-text {
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
      }

      .header::before {
        content: "";
        position: absolute;
        top: -14px;
        z-index: -1;
        height: 2px;
        width: 130%;
        background-color: #0c1013;
      }
    </style>
  </body>
</html>
