--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans text-dark bg-light scroll-smooth">
		<slot />
	</body>
</html>
<style is:global>

	a {
		cursor: pointer;
	}

	.landing-text {
		text-shadow: 0 2px 6px rgba(0,0,0,0.5);
	}

.header::before {
	content: '';
	position: absolute;
	top: -14px;
	left: -30%;
	z-index: -1;
	height: 2px;
	width: 130%;
	background-color: #0C1013;
}
</style>
